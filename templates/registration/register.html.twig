<div class="signup-form" >
  

  {{ form_start(registrationForm) }}
  <div class="input-box">
    <i class="fas fa-user"></i>
    {{ form_label(registrationForm.name) }}
    {{ form_widget(registrationForm.name, {'attr': {'class': 'form-content','placeholder': 'Enter your name'}}) }}
  </div>
  <div class="input-box">
    <i class="fas fa-envelope"></i>
    {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'sr-only'}}) }}
    {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Enter your email', 'required': 'required'}}) }}
  </div>
  <div class="input-box">
    <i class="fas fa-lock"></i>
    {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'sr-only'}}) }}
    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Enter your password', 'required': 'required'}}) }}
  </div>
   <div class="form-check mb-3">
   
    {{ form_label(registrationForm.roles, 'roles', {'label_attr': {'class': 'form-check-label', 'for': 'agreeTerms'}}) }}
    {{ form_widget(registrationForm.roles, {'attr': {'class': 'form-check-input', 'id': 'agreeTerms', 'required': 'required'}}) }}
  </div>
  <div class="form-check mb-3">
    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input', 'id': 'agreeTerms', 'required': 'required'}}) }}
    {{ form_label(registrationForm.agreeTerms, 'I agree to the terms and conditions', {'label_attr': {'class': 'form-check-label', 'for': 'agreeTerms'}}) }}
  </div>
  <button type="submit" class="btn btn-primary btn-block">Register</button>
  {{ form_end(registrationForm) }}
  </div>
   <div class="text sign-up-text" style=" margin-top:35px">Already have an account?   <li class="link-item"><a href="login" class="link">Login now</a></li>
</div>



{% endblock %}
